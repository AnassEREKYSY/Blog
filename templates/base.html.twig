<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/5/flatly/bootstrap.min.css">
        <link rel="stylesheet" href="article.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand fw-bolder" href="{{ path('app_article') }}">Blog</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse mx-5" id="navbarColor03">
                    {% if app.session.get('idUser') %}
                        <ul class="navbar-nav me-auto ">
                            <li class="nav-item mx-5 fw-bolder">
                                <a class="nav-link" href="{{ path('app_article_create',{'id':app.session.get('idUser')}) }}">Ajouter</a>
                            </li>
                            <li class="nav-item fw-bolder">
                                <a class="nav-link" href="{{ path('app_article_account',{'id':app.session.get('idUser')}) }}"><i class="fa-solid fa-user"></i></a>
                            </li>
                        </ul>
                        <ul class="navbar-nav me-auto text-lg-left">
                            <li class="nav-item fw-bolder">
                                <a class="nav-link" href="{{ path('app_article_logout',{'id':app.session.get('idUser')}) }}"><i class="fa-sharp fa-solid fa-right-from-bracket"></i></a>
                            </li>
                        </ul>

                        {% else %}
                        <ul class="navbar-nav me-auto ">
                            <li class="nav-item mx-5 fw-bolder">
                                <a class="nav-link" href="{{ path('app_article_loging') }}">Ajouter</a>
                            </li>
                            <li class="nav-item fw-bolder">
                                <a class="nav-link" href="{{ path('app_article_loging') }}"><i class="fa-solid fa-user"></i></a>
                            </li>
                        </ul>
                        {% endif %}

                </div>
            </div>
        </nav>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
